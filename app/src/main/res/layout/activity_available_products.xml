<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AvailableProducts">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_sale"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_background"
                android:text="Sale"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="15dp"/>

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/btn_sale"
                android:text="Buy"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/btn_background_buy"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/list_item_background"
                android:layout_below="@+id/btn_sale"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Customer Name"
                android:paddingStart="10dp"/>

            <Button
                android:id="@+id/btn_add_product"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/ic_add_circle"
                android:text="Add product"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_background"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/relative_view"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_below="@+id/btn_add_product"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="300dp"/>-->

            <RelativeLayout
                android:id="@+id/rl_balance"
                android:layout_below="@id/btn_add_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/border_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="600000 tk "
                    android:textColor="@color/price_color"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_first"
                android:layout_below="@id/rl_balance"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#000000"/>

            <RelativeLayout
                android:id="@+id/rl_balance_second"
                android:layout_below="@id/view_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid: "
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/border_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <EditText
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:inputType="numberDecimal"
                    android:background="@drawable/list_item_background"
                    android:hint="600000 tk "
                    android:textColor="#000000"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_second"
                android:layout_below="@id/rl_balance_second"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#000000"/>

            <RelativeLayout
                android:id="@+id/rl_balance_third"
                android:layout_below="@id/view_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:layout_marginStart="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/border_color"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="600000 tk "
                    android:textColor="#f86868"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </RelativeLayout>
            <EditText
                android:id="@+id/tv_customer_note"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="top"
                android:background="@drawable/list_item_background"
                android:layout_below="@+id/rl_balance_third"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:hint="Note"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="5dp"/>

            <Button
                android:id="@+id/btn_add_product_done"
                android:paddingEnd="10dp"
                android:drawableEnd="@drawable/ic_check_circle"
                android:text="Add product"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/btn_background_done"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tv_customer_note"
                android:layout_width="match_parent"
                android:layout_height="35dp" />


        </RelativeLayout>


    </ScrollView>

</LinearLayout>