<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/framid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botombarid"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayoutid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMode="fixed"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/botombarid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D594E0"
        android:visibility="visible"
        app:menu="@menu/menu_list"></android.support.design.widget.BottomNavigationView>


</RelativeLayout>