<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/rl_available_product_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="16dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_available_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Available products"/>

        <ImageButton
            android:id="@+id/btn_add_product_available"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_add_circle_black_24dp"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rl_available_product"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/rl_available_product_list">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>